@model IEnumerable<TiendaVirtualBD.Models.Producto>

@{
    ViewData["Title"] = "PRODUCTOS";
}

<h1>Lista de Productos</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Destacado</th>
            <th>Activo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nombre</td>
                <td>@item.Precio</td>
                <td>@item.Destacado</td>
                <td>@Html.DisplayFor(modelItem => item.Activo)</td>
            </tr>
        }
    </tbody>
</table>
